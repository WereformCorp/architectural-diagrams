flowchart TD
    %% =========================
    %% Core Identity Layer
    %% =========================
    Auth["Auth Service\n(Identity & Trust)"]

    %% =========================
    %% User & Access Layer
    %% =========================
    User["User Service\n(User Existence & Profile)"]
    Sub["Subscription Service\n(Plans & Entitlements)"]

    %% =========================
    %% Content Ownership Layer
    %% =========================
    Channel["Channel Service\n(Ownership Boundary)"]
    Video["Video Service\n(Video Content)"]
    Wire["Wire Service\n(Text Content)"]

    %% =========================
    %% External Integration Layer
    %% =========================
    AWS["AWS Service\n(Uploads & Storage)"]

    %% =========================
    %% Dependencies (Clear & Intentional)
    %% =========================

    %% Identity dependencies
    User --> Auth
    Sub --> Auth
    Channel --> Auth
    Video --> Auth
    Wire --> Auth

    %% User & access dependencies
    User --> Sub
    Channel --> User
    Video --> User
    Wire --> User

    %% Content hierarchy dependencies
    Video --> Channel
    Wire --> Channel

    %% AWS integration dependencies
    AWS --> User
    AWS --> Channel
    AWS --> Video

